<div class="container" style="min-width: 100%">
  <div class="row" style="min-width: 100%">
    <div class="col-md-3 col-sm-3 col-xs-12 left-sidebar">
      <div class="input-group searchbox">
        <input class="form-control" placeholder="Search" name="srch-term" id="srch-term" type="text">
        <div class="input-group-btn">
          <button class="btn btn-default search-icon" type="submit"><i class="glyphicon glyphicon-search"></i></button>
        </div>
      </div>
      <div class="left-chat">
      </div>
    </div>
    <div class="col-md-9 col-sm-9 col-xs-12 right-sidebar">
      <div class="row">
        <div class="col-md-12 right-header">
          <div class="right-header-img">
            <%= image_tag("businessman.png") %>
          </div>
          <div class="right-header-detail">
            <p>Jack Clerk</p>
            <span>already 19 messages </span>
          </div>
        </div>
      </div>
      <p class="hidden" id="conversation-id"><%= @conversation.id %></p>
      <div class="row">
        <div class="col-md-12 right-header-contentChat">
          <ul id="list-message">
            <%= render partial: "messages/message", collection: @messages %>
          </ul>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12 right-chat-textbox" style="height: 30%">
          <textarea class="form-control" id="form-message"></textarea>
        </div>
      </div>
    </div>
  </div>
</div>
